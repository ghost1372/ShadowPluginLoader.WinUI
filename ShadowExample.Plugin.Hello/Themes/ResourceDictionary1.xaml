<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Dark">

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Color x:Key="BikaAccentColorLight1">#FFFBA3C4</Color>
                    <Color x:Key="BikaAccentColorLight2">#FFFCB0CD</Color>
                    <Color x:Key="BikaAccentColorLight3">#FFFDBCD6</Color>
                    <Color x:Key="BikaAccentColorLight4">#FFFEC9DF</Color>
                    <Color x:Key="BikaAccentColorLight5">#FFFFD5E8</Color>
                    <Color x:Key="BikaAccentColorDark1">#FFE480A7</Color>
                    <Color x:Key="BikaAccentColorDark2">#FFCF6993</Color>
                    <Color x:Key="BikaAccentColorDark3">#FFB9527E</Color>
                    <Color x:Key="BikaAccentColorDark4">#FFA43B6A</Color>
                    <Color x:Key="BikaAccentColorDark5">#FF8E2456</Color>
                    <Color x:Key="BikaUserTitleColor">#FFe8a400</Color>
                    <Color x:Key="BikaComicItemAccentColor">#FF4D4D4D</Color>
                    <Color x:Key="BikaComicFinishAccentColor">#FF575757</Color>
                    <SolidColorBrush x:Key="BikaAccentColorDark4Brush" Color="{StaticResource BikaAccentColorDark4}" />
                    <SolidColorBrush x:Key="BikaAccentColorDark3Brush" Color="{StaticResource BikaAccentColorDark3}" />
                    <SolidColorBrush x:Key="BikaAccentColorDark2Brush" Color="{StaticResource BikaAccentColorDark2}" />
                    <SolidColorBrush x:Key="BikaAccentColorDark1Brush" Color="{StaticResource BikaAccentColorDark1}" />
                    <SolidColorBrush x:Key="BikaAccentColorLight1Brush" Color="{StaticResource BikaAccentColorLight1}" />
                    <SolidColorBrush x:Key="BikaAccentColorLight2Brush" Color="{StaticResource BikaAccentColorLight2}" />
                    <SolidColorBrush x:Key="BikaAccentColorLight3Brush" Color="{StaticResource BikaAccentColorLight3}" />

                    <SolidColorBrush x:Key="BikaCommentColor" Color="{StaticResource BikaAccentColorLight1}" />

                    <SolidColorBrush x:Key="BikaUserTitleBackground" Color="{StaticResource BikaUserTitleColor}" />
                    <SolidColorBrush x:Key="BikaTagBackground" Color="{StaticResource BikaAccentColorDark1}" />
                    <SolidColorBrush x:Key="BikaTagPressedBackground" Color="{StaticResource BikaAccentColorDark2}" />
                    <SolidColorBrush x:Key="BikaTagPointerOverBackground" Color="{StaticResource BikaAccentColorLight1}" />
                    <SolidColorBrush x:Key="BikaTagForeground" Color="White" />

                    <Color x:Key="BikaLockBackgroundChecked">#FFE480A7</Color>
                    <Color x:Key="BikaLockBackgroundPointerOver">#FFFBA3C4</Color>
                    <Color x:Key="BikaLockBackgroundCheckedPressed">#FFCF6993</Color>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Color x:Key="BikaAccentColorLight1">#FFFBA3C4</Color>
                    <Color x:Key="BikaAccentColorLight2">#FFFCB0CD</Color>
                    <Color x:Key="BikaAccentColorLight3">#FFFDBCD6</Color>
                    <Color x:Key="BikaAccentColorLight4">#FFFEC9DF</Color>
                    <Color x:Key="BikaAccentColorLight5">#FFFFD5E8</Color>
                    <Color x:Key="BikaAccentColorDark1">#FFE480A7</Color>
                    <Color x:Key="BikaAccentColorDark2">#FFCF6993</Color>
                    <Color x:Key="BikaAccentColorDark3">#FFB9527E</Color>
                    <Color x:Key="BikaAccentColorDark4">#FFA43B6A</Color>
                    <Color x:Key="BikaAccentColorDark5">#FF8E2456</Color>
                    <Color x:Key="BikaComicItemAccentColor">#FFfdd7e6</Color>
                    <Color x:Key="BikaComicFinishAccentColor">#FFffe8f4</Color>
                    <Color x:Key="BikaUserTitleColor">#FFFFB401</Color>
                    <SolidColorBrush x:Key="BikaUserTitleBackground" Color="{StaticResource BikaUserTitleColor}" />
                    <SolidColorBrush x:Key="BikaAccentColorDark4Brush" Color="{StaticResource BikaAccentColorDark4}" />
                    <SolidColorBrush x:Key="BikaAccentColorDark3Brush" Color="{StaticResource BikaAccentColorDark3}" />
                    <SolidColorBrush x:Key="BikaAccentColorDark2Brush" Color="{StaticResource BikaAccentColorDark2}" />
                    <SolidColorBrush x:Key="BikaAccentColorDark1Brush" Color="{StaticResource BikaAccentColorDark1}" />
                    <SolidColorBrush x:Key="BikaAccentColorLight1Brush" Color="{StaticResource BikaAccentColorLight1}" />
                    <SolidColorBrush x:Key="BikaAccentColorLight2Brush" Color="{StaticResource BikaAccentColorLight2}" />
                    <SolidColorBrush x:Key="BikaAccentColorLight3Brush" Color="{StaticResource BikaAccentColorLight3}" />

                    <SolidColorBrush x:Key="BikaCommentColor" Color="{StaticResource BikaAccentColorDark1}" />

                    <SolidColorBrush x:Key="BikaTagBackground" Color="{StaticResource BikaAccentColorLight5}" />
                    <SolidColorBrush x:Key="BikaTagPressedBackground" Color="{StaticResource BikaAccentColorLight1}" />
                    <SolidColorBrush x:Key="BikaTagPointerOverBackground" Color="{StaticResource BikaAccentColorLight3}" />
                    <SolidColorBrush x:Key="BikaTagForeground" Color="{StaticResource BikaAccentColorDark1}" />

                    <Color x:Key="BikaLockBackgroundChecked">#FFFBA3C4</Color>
                    <Color x:Key="BikaLockBackgroundPointerOver">#FFFEC9DF</Color>
                    <Color x:Key="BikaLockBackgroundCheckedPressed">#FFFEC9DF</Color>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries> 
</ResourceDictionary>